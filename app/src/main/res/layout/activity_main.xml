<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    android:theme="@style/AppTheme.NoActionBar">

    <TextView
        android:id="@+id/msg3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="59dp"
        android:text="@string/msg1"
        android:layout_below="@+id/txMessage"
        android:layout_alignLeft="@+id/msg2"
        android:layout_alignStart="@+id/msg2"
        android:textColor="@color/colorWhite"/>

    <TextView
        android:id="@+id/msg2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="11dp"
        android:text="@string/msg2"
        android:textColor="@color/colorWhite"
        android:layout_below="@+id/msg3"
        android:layout_alignLeft="@+id/msg1"
        android:layout_alignStart="@+id/msg1" />

    <ImageView
        android:id="@+id/image"
        android:layout_width="265dp"
        android:layout_height="76dp"
        tools:layout_editor_absoluteX="111dp"
        tools:layout_editor_absoluteY="16dp"
        android:layout_marginTop="50dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:contentDescription="logo" />

    <TextView
        android:id="@+id/txMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="63dp"
        android:text="@string/msg"
        android:textSize="20sp"
        android:textColor="@color/colorWhite"
        android:layout_below="@+id/image"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/msg1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="@string/msg3"
        android:textColor="@color/colorWhite"
        android:layout_below="@+id/msg2"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:id="@+id/tick1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/msg3"
        android:layout_alignTop="@+id/msg3"
        android:layout_toLeftOf="@+id/msg3"
        android:layout_alignLeft="@+id/tick2"
        android:layout_alignStart="@+id/tick2" />

    <ImageView
        android:id="@+id/tick2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/msg2"
        android:layout_alignLeft="@+id/txMessage"
        android:layout_alignStart="@+id/txMessage"
        android:layout_alignTop="@+id/msg2"
        android:layout_toLeftOf="@+id/msg3" />

    <ImageView
        android:id="@+id/tick3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/msg1"
        android:layout_alignEnd="@+id/tick1"
        android:layout_alignLeft="@+id/tick2"
        android:layout_alignRight="@+id/tick1"
        android:layout_alignStart="@+id/tick2"
        android:layout_alignTop="@+id/msg1" />

    <Button
        android:id="@+id/btn_create"
        android:layout_width="275dp"
        android:layout_height="45dp"
        android:onClick="nextActivity"
        android:text="Create an account"
        android:textAllCaps="false"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/tick3"
        android:layout_alignStart="@+id/tick3"
        android:layout_marginBottom="18dp" />


</RelativeLayout>
